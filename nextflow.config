params {
    input_meta         = null
    min_ff             = 0.01
    max_ff             = 0.11
    ff_step            = 0.01
    min_depth          = 100
    max_depth          = 200
    depth_step         = 10
    dmr_bed            = null
    fasta              = null
    fasta_index        = null
    outdir             = null
}

process {
    executor = 'slurm'

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: 'copy',
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: 'MIX' {
        container = "${baseDir}/images/common_tools.sif"
        cpus      = 16
        memory    = 64.GB
        time      = 24.h
        queue     = 'cn-long'
    }
}

profiles {
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        singularity.runOptions = "-B /lustre1,/lustre2"
    }
}

manifest {
    author = 'vanreality'
    name = 'insilico_mix'
    description = ''
    version = 'dev1.0'
}
